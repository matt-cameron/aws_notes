# Update and upgrade the system
sudo apt update
sudo apt -y upgrade

# Verify Python is installed
python3 --version

# Install PIP3
sudo apt -y install python3-pip

# verify PIP3 is installed
pip3 --version

# install the AWSEBCLI
sudo pip3 install --upgrade awsebcli

# add export PATH=~/.local/bin:$PATH to .profile
vi .profile
export PATH=~/.local/bin:$PATH
:w
:q
